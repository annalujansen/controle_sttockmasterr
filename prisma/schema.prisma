datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Usuario {
  id      Int     @id @default(autoincrement())
  nome    String
  email   String  @unique
  senha   String
  isadmin Boolean
  transacao Transacao[]
}

model Produto {
  id         Int     @id @default(autoincrement())
  nome       String
  descricao  String?
  preco      Int
  quantidade Int
  transacao  Transacao[]
}

model Transacao {
  id         Int      @id @default(autoincrement())
  produtoId  Int
  quantidade Int
  data       DateTime @default(now())
  usuarioId  Int
  produto Produto @relation(fields: [produtoId], references: [id])
  usuario Usuario @relation(fields: [usuarioId], references: [id])
}   
